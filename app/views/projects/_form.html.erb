<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :project_name %><br>
      <%= f.text_field :project_name, class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :progress %><br>
      <%= f.select :progress, [0,25,50,75,100], class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :progress_description %><br>
      <%= f.text_area :progress_description, class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :date_started %><br>
      <%= f.date_field :date_started, class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :last_updated %><br>
      <%= f.date_field :last_updated, class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :eta %><br>
      <%= f.date_field :eta, class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :project_type %><br>
      <%= f.select :project_type, ['Landing Page','Web Application','Desktop Application','Custom Features','Maintenance','Other'],class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :status %><br>
      <%= f.select :status, ['Pending Approval','Assessing Project','Estimating Project','Filling Paperwork','Queued For Progress','In Progress','Testing','Finishing Up','Completed'],class: "ta-session-input" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-4">
      <%= f.label :approved %><br>
      <%= f.check_box :approved, class: "ta-session-input" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit 'Create', class: "ta-login-btn" %>
  </div>
<% end %>