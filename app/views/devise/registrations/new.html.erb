<% if current_user && current_user.admin? %>
  <div class="ta-session-forms">
    <h2 class="ta-fc-white">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ta-session-input" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <% @password_length_placeholder = @minimum_password_length.to_s + " characters minimum" %>
          <br />
          <%= f.password_field :password, autocomplete: "off", placeholder: @password_length_placeholder, class: "ta-session-input" %>
        <% else %>
          <br />
          <%= f.password_field :password, autocomplete: "off", class: "ta-session-input" %>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "ta-session-input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "ta-login-btn" %>
      </div>
    <% end %>

    <br>

    <%= render "devise/shared/links" %>
  </div>
<% end %>