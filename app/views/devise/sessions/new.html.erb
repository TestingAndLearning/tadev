<%= flash_messages %>
<div class="ta-session-forms">
  <h2 class="ta-fc-white">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ta-session-input" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "ta-session-input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, class: "ta-remember-me-checkbox" %>
        <%= f.label :remember_me%>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "ta-login-btn" %>
    </div>
  <% end %>

  <br>

  <%= render "devise/shared/links" %>
</div>